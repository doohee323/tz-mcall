# runit
sudo mkdir -p /etc/service/tz_mcall
sudo rm -Rf /etc/service/tz_mcall/run
sudo touch /etc/service/tz_mcall/run
sudo chmod 777 /etc/service/tz_mcall/run

sudo echo '#!/bin/sh' >> /etc/service/tz_mcall/run
sudo echo 'cd /usr/tz_mcall/mcall' >> /etc/service/tz_mcall/run
sudo echo './mcall -w=true &' >> /etc/service/tz_mcall/run

sudo mkdir -p /var/log/mcall
#sudo chown -Rf ubuntu:ubuntu /var/log/mcall

#sudo chown -Rf ubuntu:ubuntu /etc/service/tz_mcall
sv start /etc/service/tz_mcall

